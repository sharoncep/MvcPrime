@{
    Layout = "~/Views/Shared/MasterPages/Home.cshtml";
}
@using ClaimatePrimeControllers.SecuredFolder.StaticClasses;

<div class="dv-page-header1">
    <ul class="ul-header">
        <li><a href="@Url.RouteUrl(StaticClass.RouteValues("PatientDemography"))" title="@Resources.ClaimatePrimeWebResx.Back" class="back-button" onclick="javascript:showDivPageLoading();"></a></li>
        <li>@Resources.ClaimatePrimeWebResx.Patient</li>
    </ul>
</div>
@Html.Partial("UserControls/PageHeaderSub")
<div class="dv-block">
    <ul class="ul-menu">
        <li><a href="@Url.RouteUrl(StaticClass.RouteValues("PatDemography", "Save"))" onclick="javascript:showDivPageLoading();" rel="menu_tile" class="menu-edit-ba">@Resources.ClaimatePrimeWebResx.Edit</a></li>
        <li><a href="@Url.RouteUrl(StaticClass.RouteValues("PatDocument"))" onclick="javascript:showDivPageLoading();" rel="menu_tile" class="menu-document-ba">@Resources.ClaimatePrimeWebResx.Document</a> </li>
        <li><a href="@Url.RouteUrl(StaticClass.RouteValues("PatHospitalization"))" onclick="javascript:showDivPageLoading();" rel="menu_tile" class="menu-hospitalization-ba">@Resources.ClaimatePrimeWebResx.Hospitalization</a> </li>
        <li><a href="@Url.RouteUrl(StaticClass.RouteValues("PatVisit"))" onclick="javascript:showDivPageLoading();" rel="menu_tile" class="menu-visit-ba">@Resources.ClaimatePrimeWebResx.Visit</a> </li>
    </ul>
</div>

<div style="display: none;">
    @*Error Or Success Message Displaying*@
    @if ((ViewBag.ErrMsg > 0) || (ViewBag.SuccMsg > 0))
    {
        if (ViewBag.ErrMsg > 0)
        {
            if (ViewBag.ErrMsg == 1)
            {
        <input type="text" name="txtErrMsg"  value="@Resources.ClaimatePrimeWebResx.SaveErrorSucc" />
            }
            else
            {
        <input type="text" name="txtErrMsg"  value="@Resources.ClaimatePrimeWebResx.SaveErrorSucc" />
            }
        }
        else
        {
            if (ViewBag.SuccMsg == 1)
            {
        <input type="text" name="txtSuccMsg" value="@Resources.ClaimatePrimeWebResx.SaveSucc" />
            }
            else
            {
        <input type="text" name="txtSuccMsg"  value="@Resources.ClaimatePrimeWebResx.SaveErrorSucc" />
            }
        }
    }
</div>