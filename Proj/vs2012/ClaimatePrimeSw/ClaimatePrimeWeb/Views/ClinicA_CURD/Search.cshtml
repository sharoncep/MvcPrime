@{
    Layout = "~/Views/Shared/MasterPages/Home.cshtml";
}

@using ClaimatePrimeControllers.SecuredFolder.Extensions;
@using ClaimatePrimeEFWork.EFContexts;
@using ClaimatePrimeModels.SecuredFolder.Commons;
@using ClaimatePrimeControllers.SecuredFolder.StaticClasses;
@using ClaimatePrimeControllers.SecuredFolder.SessionClasses;
@using ClaimatePrimeModels.SecuredFolder.Extensions;
@model ClaimatePrimeModels.Models.ClinicSearchAdModel

<div class="dv-page-header1">
    <ul class="ul-header">
        <li><a href="@Url.RouteUrl(StaticClass.RouteValues("MenuBillInfoA"))"  title="@Resources.ClaimatePrimeWebResx.Back" class="back-button" onclick="javascript:showDivPageLoading();"></a></li>
        <li>@Resources.ClaimatePrimeWebResx.Practice
        </li>
    </ul>
</div>
@Html.Partial("UserControls/PageHeaderSub")
<div class="dv-block">
    @using (Html.ArivaForm("ClinicA"))
    {
        <div style="display: none;">
            @Html.TextBoxFor(m => m.StartBy)
            @Html.TextBoxFor(m => m.CurrNumber)
            @Html.TextBoxFor(m => m.OrderByField)
            @Html.TextBoxFor(m => m.OrderByDirection)
            @Html.CheckBox("chkHasRec", Model.HasRec,
                       StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                        { new KeyValueModel<string, string>("id", "chkHasRec") }    
                                    }))
            <input type="text" name="CurrPageNumber" id="CurrPageNumber" value="0" />
            <input type="submit" name="btnSearch" id="btnSearch" value="btnSearch" onclick="javascript: return canSubmit();" />
        </div>
    }
</div>
@Html.Partial("UserControls/PageHeaderSub")
<div class="dv-block">
    <table class="table-grid">
        <tr>
            @if (string.Compare(Model.OrderByDirection, "D", true) == 0)
            {
                <td style="width:30%" class="td-gridhead">
                    @if (string.Compare(Model.OrderByField, "ClinicName", true) == 0)
                    {
                        <a class="sort_descending" onclick="javascript:return setSort('ClinicName', 'A');" href="#">@Resources.ClaimatePrimeWebResx.Name</a>
                    }
                    else
                    {
                        <a class="sort_normal" onclick="javascript:return setSort('ClinicName', 'D');" href="#">@Resources.ClaimatePrimeWebResx.Name</a>    
                    }
                </td>
                <td style="width:10%" class="td-gridhead">
                    @if (string.Compare(Model.OrderByField, "ClinicCode", true) == 0)
                    {
                        <a class="sort_descending" onclick="javascript:return setSort('ClinicCode', 'A');" href="#">@Resources.ClaimatePrimeWebResx.Code</a>
                    }
                    else
                    {
                        <a class="sort_normal" onclick="javascript:return setSort('ClinicCode', 'D');" href="#">@Resources.ClaimatePrimeWebResx.Code</a>    
                    }
                </td>
                
                
                
                <td style="width:20%" class="td-gridhead">
                    @if (string.Compare(Model.OrderByField, "IPAName", true) == 0)
                    {
                        <a class="sort_descending" onclick="javascript:return setSort('IPAName', 'A');" href="#">@Resources.ClaimatePrimeWebResx.IPA</a>
                    }
                    else
                    {
                        <a class="sort_normal" onclick="javascript:return setSort('IPAName', 'D');" href="#">@Resources.ClaimatePrimeWebResx.IPA</a>    
                    }
                </td>
                 <td style="width:25%" class="td-gridhead">
                    @if (string.Compare(Model.OrderByField, "EntityTypeName", true) == 0)
                    {
                        <a class="sort_descending" onclick="javascript:return setSort('EntityTypeName', 'A');" href="#">@Resources.ClaimatePrimeWebResx.EntityTypeQualifier</a>
                    }
                    else
                    {
                        <a class="sort_normal" onclick="javascript:return setSort('EntityTypeName', 'D');" href="#">@Resources.ClaimatePrimeWebResx.EntityTypeQualifier</a>    
                    }
                </td>
            }
            else
            {
                    
                <td style="width:30%" class="td-gridhead">
                    @if (string.Compare(Model.OrderByField, "ClinicName", true) == 0)
                    {
                        <a class="sort_acending" onclick="javascript:return setSort('ClinicName', 'D');" href="#">@Resources.ClaimatePrimeWebResx.Name</a>
                    }
                    else
                    {
                        <a class="sort_normal" onclick="javascript:return setSort('ClinicName', 'A');" href="#">@Resources.ClaimatePrimeWebResx.Name</a>    
                    }
                </td>
                <td style="width:10%" class="td-gridhead">
                    @if (string.Compare(Model.OrderByField, "ClinicCode", true) == 0)
                    {
                        <a class="sort_acending" onclick="javascript:return setSort('ClinicCode', 'D');" href="#">@Resources.ClaimatePrimeWebResx.Code</a>
                    }
                    else
                    {
                        <a class="sort_normal" onclick="javascript:return setSort('ClinicCode', 'A');" href="#">@Resources.ClaimatePrimeWebResx.Code</a>    
                    }
                </td>
            
                <td style="width:20%" class="td-gridhead">
                    @if (string.Compare(Model.OrderByField, "IPAName", true) == 0)
                    {
                        <a class="sort_acending" onclick="javascript:return setSort('IPAName', 'D');" href="#">@Resources.ClaimatePrimeWebResx.IPA</a>
                    }
                    else
                    {
                        <a class="sort_normal" onclick="javascript:return setSort('IPAName', 'A');" href="#">@Resources.ClaimatePrimeWebResx.IPA</a>    
                    }
                </td>
                 <td style="width:25%" class="td-gridhead">
                    @if (string.Compare(Model.OrderByField, "EntityTypeName", true) == 0)
                    {
                        <a class="sort_acending" onclick="javascript:return setSort('EntityTypeName', 'D');" href="#">@Resources.ClaimatePrimeWebResx.EntityTypeQualifier</a>
                    }
                    else
                    {
                        <a class="sort_normal" onclick="javascript:return setSort('EntityTypeName', 'A');" href="#">@Resources.ClaimatePrimeWebResx.EntityTypeQualifier</a>    
                    }
                </td>
            }

               <td style="width:15%" class="td-gridhead">
                <a href="@Url.RouteUrl(StaticClass.RouteValues("ClinicA", "Save"))" class="aAdd-td"  rel="control_tile">@Resources.ClaimatePrimeWebResx.AddNew</a>
            </td>

        </tr>


        @foreach (usp_GetBySearchAd_Clinic_Result item in Model.AdClinicResult)
        {
            if(item.IsActive)
            {
            <tr>
                  <td>
                    @item.ClinicName
                </td>
                <td>
                    @item.ClinicCode
                </td>
              
                <td>
                    @item.IPAName
                </td>
                <td>
                    @item.EntityTypeQualifierName
                </td>
                <td>
                    <a href="#" onclick="@string.Concat("javascript:return setEdit('", item.ClinicID, "');")"  class="aEdit"  rel="control_tile">@Resources.ClaimatePrimeWebResx.Edit </a>
                </td>
            </tr>
        }
                
            
            else
            {
            <tr rel="rel-block">
                <td>
                    @item.ClinicName
                </td>
                <td>
                    @item.ClinicCode
                </td>
              
                <td>
                    @item.IPAName
                </td>
                <td>
                    @item.EntityTypeQualifierName
                </td>
                <td>
                    <a href="#" onclick="@string.Concat("javascript:return setEdit('", item.ClinicID, "');")"  class="aEdit"  rel="control_tile">@Resources.ClaimatePrimeWebResx.Edit  </a>
                </td>
            </tr>
            }
        }
    </table>
</div>

<div style="display: none;">
    @*Error Or Success Message Displaying*@
    @if ((ViewBag.ErrMsg > 0) || (ViewBag.SuccMsg > 0))
    {
        if (ViewBag.ErrMsg > 0)
        {
            if (ViewBag.ErrMsg == 1)
            {
                <input type="text" name="txtErrMsg"  value="@Resources.ClaimatePrimeWebResx.SaveErrorSucc" />
            }
            else
            {
                <input type="text" name="txtErrMsg"  value="@Resources.ClaimatePrimeWebResx.SaveErrorSucc" />
            }
        }
        else
        {
            if (ViewBag.SuccMsg == 1)
            {
        <input type="text" name="txtSuccMsg"  value="@Resources.ClaimatePrimeWebResx.SaveSucc" />
            }
            else
            {
                <input type="text" name="txtSuccMsg"  value="@Resources.ClaimatePrimeWebResx.SaveErrorSucc" />
            }
        }
    }
</div>
