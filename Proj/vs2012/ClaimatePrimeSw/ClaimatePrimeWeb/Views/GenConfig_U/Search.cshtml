@{
    Layout = "~/Views/Shared/MasterPages/Home.cshtml";
}
@using ClaimatePrimeControllers.SecuredFolder.StaticClasses;
@using ClaimatePrimeControllers.SecuredFolder.Extensions;
@using ClaimatePrimeControllers.SecuredFolder.SessionClasses;
@using ClaimatePrimeModels.SecuredFolder.Extensions;
@using ClaimatePrimeConstants;
@model ClaimatePrimeModels.Models.GeneralConfigModel

<div>
    <div class="dv-page-header1">
        <ul class="ul-header">
            <li><a href="@Url.RouteUrl(StaticClass.RouteValues("MenuConfig"))" title="@Resources.ClaimatePrimeWebResx.Back" class="back-button" onclick="javascript:showDivPageLoading();"></a></li>
            <li>@Resources.ClaimatePrimeWebResx.GenConfig</li>
        </ul>
    </div>
    @Html.Partial("UserControls/PageHeaderSub")
    @using (Html.ArivaForm("GenConfig"))
    { 
        @Html.TextBoxFor(m => m.AntiForgTokn
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                        { new KeyValueModel<string, string>("style", "display:none;") } 
                                    }))
        <div class="dv-block">
            <table class="table-entry">
                <tr>
                    <td class="td-note" colspan="4">@Resources.ClaimatePrimeWebResx.Note : 
                        <ol>
                            <li>@Resources.ClaimatePrimeWebResx.GenConfigNoteForHosp</li>
                            <li>@Resources.ClaimatePrimeWebResx.GenConfigNoteForDate</li>
                        </ol>
                    </td>
                </tr>
                <tr>
                    <td>@Resources.ClaimatePrimeWebResx.UserCredSub <span class="star">*</span></td>
                    <td>
                        @Html.TextBoxFor(m => m.mUserAccEmailSubject)

                    </td>
                    <td>@Resources.ClaimatePrimeWebResx.SearchRecordPerPage <span class="star">*</span></td>
                    <td>
                        @Html.TextBoxFor(m => m.mSearchRecordPerPage)
                        @Html.TextBoxFor(m => m.mSearchRecordPerPageID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                       { new KeyValueModel<string, string>("style", "display:none;") }  
                                    }))
                    </td>
                </tr>
                <tr>
                    <td style="width: 30%">@Resources.ClaimatePrimeWebResx.PageLockTime <span class="star">*</span>
                    </td>
                    <td style="width: 20%">
                        @Html.TextBoxFor(m => m.mPageLockIdleTimeInMin)
                        @Html.TextBoxFor(m => m.mPageLockIdleTimeInMinID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                       { new KeyValueModel<string, string>("style", "display:none;") } 
                                    }))
                    </td>
                    <td style="width: 30%">@Resources.ClaimatePrimeWebResx.SessionTimeoutMin <span class="star">*</span>

                    </td>
                    <td style="width: 20%">
                        @Html.TextBoxFor(m => m.mSessionOutFromPageLockInMin)
                        @Html.TextBoxFor(m => m.mSessionOutFromPageLockInMinID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                       { new KeyValueModel<string, string>("style", "display:none;") } 
                                    }))
                    </td>
                </tr>
                <tr>
                    <td>@Resources.ClaimatePrimeWebResx.MaxDaysBAComplete <span class="star">*</span>
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mBACompleteFromDOSInDay)
                        @Html.TextBoxFor(m => m.mBACompleteFromDOSInDayID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                        { new KeyValueModel<string, string>("style", "display:none;") }  
                                    }))
                    </td>
                    <td>@Resources.ClaimatePrimeWebResx.MaxDaysQAComplete <span class="star">*</span>
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mQACompleteFromDOSInDay)
                        @Html.TextBoxFor(m => m.mQACompleteFromDOSInDayID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                        { new KeyValueModel<string, string>("style", "display:none;") } 
                                    }))
                    </td>
                </tr>
                <tr>
                    <td>@Resources.ClaimatePrimeWebResx.MaxDaysEDIFileSent <span class="star">*</span>
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mEDIFileSentFromDOSInDay)
                        @Html.TextBoxFor(m => m.mEDIFileSentFromDOSInDayID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                      { new KeyValueModel<string, string>("style", "display:none;") } 
                                    }))
                    </td>
                    <td>@Resources.ClaimatePrimeWebResx.MaxDaysClaimDone <span class="star">*</span>
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mClaimDoneFromDOSInDay)
                        @Html.TextBoxFor(m => m.mClaimDoneFromDOSInDayID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                       { new KeyValueModel<string, string>("style", "display:none;") } 
                                    }))
                    </td>
                    <tr>
                        <td>
                            @Resources.ClaimatePrimeWebResx.UploadMaxSizeInMB <span class="star">*</span>
                        </td>
                        <td>
                            @Html.TextBoxFor(m => m.mUploadMaxSizeInMB)
                            @Html.TextBoxFor(m => m.mUploadMaxSizeInMBID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                        { new KeyValueModel<string, string>("style", "display:none;") } 
                                    }))
                        </td>
                    </tr>
            </table>
            <div class="dv-submit-controls">
                <ul>
                    <li>
                        <input type="submit" name="btnSave" id="btnSave" value="@Resources.ClaimatePrimeWebResx.Save" class="button-save" onclick="javascript: return validateSave();"></li>
                    <li><a href="@Url.RouteUrl(StaticClass.RouteValues("MenuConfig"))" class="aButton-cancel" onclick="javascript:showDivPageLoading();">@Resources.ClaimatePrimeWebResx.Cancel</a></li>
                </ul>
            </div>
        </div>
    }
</div>
<div style="display: none;">
    @*Error Or Success Message Displaying*@
    @if ((ViewBag.ErrMsg > 0) || (ViewBag.SuccMsg > 0))
    {
        if (ViewBag.ErrMsg > 0)
        {
            if (ViewBag.ErrMsg == 1)
            {
        <input type="text" name="txtErrMsg"  value="@Resources.ClaimatePrimeWebResx.SaveError.Replace("[X]", Model.ErrorMsg)" style="display: none;" />
            }
            else
            {
        <input type="text" name="txtErrMsg"  value="@Resources.ClaimatePrimeWebResx.SaveErrorSucc" />
            }
        }
        else
        {
            if (ViewBag.SuccMsg == 1)
            {
        <input type="text" name="txtSuccMsg"  value="@Resources.ClaimatePrimeWebResx.SaveErrorSucc" />
            }
            else
            {
        <input type="text" name="txtSuccMsg"  value="@Resources.ClaimatePrimeWebResx.SaveErrorSucc" />
            }
        }
    }
</div>
