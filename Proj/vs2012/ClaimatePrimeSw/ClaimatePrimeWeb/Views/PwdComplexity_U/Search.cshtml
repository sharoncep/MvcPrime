@{
    Layout = "~/Views/Shared/MasterPages/Home.cshtml";
}
@using ClaimatePrimeControllers.SecuredFolder.StaticClasses;
@using ClaimatePrimeControllers.SecuredFolder.Extensions;
@using ClaimatePrimeControllers.SecuredFolder.SessionClasses;
@using ClaimatePrimeModels.SecuredFolder.Extensions;
@using ClaimatePrimeConstants;
@model ClaimatePrimeModels.Models.PasswordConfigModel
<div>

    <div class="dv-page-header1">
        <ul class="ul-header">
            <li><a href="@Url.RouteUrl(StaticClass.RouteValues("MenuConfig"))" title="@Resources.ClaimatePrimeWebResx.Back" class="back-button" onclick="javascript:showDivPageLoading();"></a></li>
            <li>@Resources.ClaimatePrimeWebResx.PwdComplexity</li>
        </ul>
    </div>
    @using (Html.ArivaForm("PwdComplexity", "Save"))
    {    
        @Html.TextBoxFor(m => m.AntiForgTokn
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                        { new KeyValueModel<string, string>("style", "display:none;") } 
                                    }))
        @Html.Partial("UserControls/PageHeaderSub")<div class="dv-block">
            <table class="table-entry">
                <tr>
                    <td colspan="4" class="td-note">Note: Value 0 means no limit / no restriction.
                    </td>
                </tr>
                <tr>
                    <td style="width: 20%">@Resources.ClaimatePrimeWebResx.MinLen <span class="star">*</span>
                    </td>
                    <td style="width: 30%">
                        @Html.TextBoxFor(m => m.mMinLength)
                        @Html.TextBoxFor(m => m.mMinLengthID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                        { new KeyValueModel<string, string>("style", "display:none;") } 
                                    }))
                    </td>
                    <td style="width: 20%">@Resources.ClaimatePrimeWebResx.MaxLen <span class="star">*</span>
                    </td>
                    <td style="width: 30%">
                        @Html.TextBoxFor(m => m.mMaxLength)
                        @Html.TextBoxFor(m => m.mMaxLengthID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                        { new KeyValueModel<string, string>("style", "display:none;") } 
                                      
                                    }))
                    </td>
                </tr>
                <tr>
                    <td>@Resources.ClaimatePrimeWebResx.UpperCount<span class="star">*</span>
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mUpperCaseMinCount)
                        @Html.TextBoxFor(m => m.mUpperCaseMinCountID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                        { new KeyValueModel<string, string>("style", "display:none;") } 
                                      
                                    }))
                    </td>
                    <td>@Resources.ClaimatePrimeWebResx.NumCount<span class="star">*</span>
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mNumberMinCount)
                        @Html.TextBoxFor(m => m.mNumberMinCountID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                       { new KeyValueModel<string, string>("style", "display:none;") } 
                                      
                                    }))
                    </td>
                </tr>
                <tr>
                    <td>@Resources.ClaimatePrimeWebResx.SpecialCount<span class="star">*</span>
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mSplCharCount)
                        @Html.TextBoxFor(m => m.mSplCharCountID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                        { new KeyValueModel<string, string>("style", "display:none;") } 
                                      
                                    }))
                    </td>
                    <td>@Resources.ClaimatePrimeWebResx.MaxAge<span class="star">*</span>

                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mExpiryDayMaxCount)
                        @Html.TextBoxFor(m => m.mExpiryDayMaxCountID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                        { new KeyValueModel<string, string>("style", "display:none;") } 
                                      
                                    }))
                    </td>
                </tr>
                <tr>
                    <td>@Resources.ClaimatePrimeWebResx.PassMaxCount<span class="star">*</span>
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mTrialMaxCount)
                        @Html.TextBoxFor(m => m.mTrialMaxCountID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                       { new KeyValueModel<string, string>("style", "display:none;") } 
                                      
                                    }))
                    </td>
                    <td>@Resources.ClaimatePrimeWebResx.PassReuse<span class="star">*</span>
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.mHistoryReuseStatus)
                        @Html.TextBoxFor(m => m.mHistoryReuseStatusID
                                , StaticClass.HtmlAttributes(
                                    new List<KeyValueModel<string, string>> { 
                                        { new KeyValueModel<string, string>("style", "display:none;") } 
                                      
                                    }))
                    </td>
                </tr>
            </table>
            <div class="dv-submit-controls">
                <ul>
                    <li>
                        <input type="submit" name="btnSave" id="btnSave" value="@Resources.ClaimatePrimeWebResx.Save" class="button-save" onclick="javascript: return validateSave();"></li>
                    <li>
                        <a href="@Url.RouteUrl(StaticClass.RouteValues("MenuConfig"))" class="aButton-cancel" onclick="javascript:showDivPageLoading();">@Resources.ClaimatePrimeWebResx.Cancel</a></li>
                </ul>
            </div>
        </div>
    }
</div>

<div>
    @*Error Or Success Message Displaying*@
    @if (ViewBag.ErrMsg > 0)
    {
        if (ViewBag.ErrMsg > 0)
        {
            if (ViewBag.ErrMsg == 1)
            {
        <input type="text" name="txtErrMsg"  value="@Resources.ClaimatePrimeWebResx.SaveError.Replace("[X]", Model.ErrorMsg)" style="display: none;" />
            }
            else
            {
            }
        }

    }
</div>

